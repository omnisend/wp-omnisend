{
  "editor": {
    "formatOnSave": true,
    "tabSize": 4,
    "insertSpaces": false,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "linting": {
    "php": {
      "enabled": true,
      "phpcs": {
        "enabled": true,
        "standard": "PSR12"
      }
    },
    "javascript": {
      "enabled": true,
      "eslint": {
        "enabled": true,
        "config": ".eslintrc"
      }
    }
  },
  "ai": {
    "context": {
      "maxFiles": 10,
      "maxTokens": 4000
    },
    "completion": {
      "enabled": true,
      "triggerCharacters": [".", ">", "@"]
    }
  },
  "search": {
    "exclude": [
      "node_modules",
      "vendor",
      "build",
      "dist",
      ".git"
    ]
  }
} 